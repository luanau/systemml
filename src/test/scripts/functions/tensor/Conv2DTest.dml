imgSize=$1
numImg=$2
imgFormat=$3
numChannels=$4
numFilters=$5
filterSize=$6
stride=$7
pad=$8

# Assumption: NCHW image format
if(imgFormat == "NCHW") {
	x=tensor(seq(1, numImg*numChannels*imgSize*imgSize), shape=[numImg, numChannels, imgSize, imgSize])
	w=tensor(seq(1, numFilters*numChannels*filterSize*filterSize), shape=[numFilters, numChannels, filterSize, filterSize])
	output = conv2d(x, w, stride=[stride, stride], padding=[pad, pad], input_shape=[numImg, numChannels, imgSize, imgSize], filter_shape=[numFilters, numChannels, filterSize, filterSize])
}
else {
	print("Not implemented")
}
write(output, $9, format="text")